{
  "manifest_version": 3,
  "name": "Tab Task Tracker",
  "version": "1.0",
  "description": "Save tabs as tasks with custom notes and priorities",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "contextMenus",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}